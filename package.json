{
  "name": "micro",
  "version": "1.0.0",
  "description": "Simple implementation of periodic table using REST",
  "main": "server.ts",
  "scripts": {
    "build": "npm run clean && tsc --p . && npm run spell:check",
    "clean": "rimraf ./dist/*",
    "debug": "npm run build && npm run watch-debug",
    "dev": "npm run build && cls && nodemon ./dist/server.js",
    "devts": "cls && npx ts-node-dev src/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "npm install && npm run dev",
    "spell:check": "cspell \"**/*.{csv,js,md,ts}\"",
    "start": "npm run build && nodemon ./dist/server.js",
    "test": "jest --forceExit --coverage --verbose && echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edusoftpro/micro.git"
  },
  "keywords": [
    "REST",
    "GQL"
  ],
  "author": "ABala",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edusoftpro/micro/issues"
  },
  "homepage": "https://github.com/edusoftpro/micro#readme",
  "dependencies": {
    "apollo-server-express": "^2.11.0",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "mongoose": "^5.9.2"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.3",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.8",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "comment-json": "^3.0.2",
    "cspell": "^4.0.53",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "eslint": "^6.4.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "moment": "^2.24.0",
    "nodemon": "^2.0.2",
    "node-fetch": "^2.6.0",
    "qs": "^6.9.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.2"
  },
  "optionalDependencies": {
    "fsevents": "^2.1.2"
  }
}
